<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/btnlayout"
    android:orientation="vertical"
	android:gravity="center"
    android:layout_width="180dp"
	android:layout_height="wrap_content">

    <ImageView android:id="@+id/btn_icon"
	    android:layout_gravity="right"
        android:layout_width="50dp"
        android:layout_height="62dp"
        android:background="@drawable/ar_view_icon01"/>
	
	<LinearLayout  
	    android:orientation="horizontal"
	    android:layout_width="130dp"
		android:layout_height="29dp">

        <ImageView android:id="@+id/btn_icon2"
            android:layout_width="101dp"
            android:layout_height="fill_parent"
            android:background="@drawable/selector_cate02"/>
        <ImageView android:id="@+id/btn_icon3"
            android:layout_width="29dp"
            android:layout_height="fill_parent"
            android:background="@drawable/selector_btn_del"/>

    </LinearLayout>
    
</LinearLayout>
