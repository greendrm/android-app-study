<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:gravity="bottom">
    <EditText android:layout_width="match_parent" android:gravity="top|left" android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/editText_text_editor" android:scrollbars="vertical">
        <requestFocus></requestFocus>
    </EditText>
    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/button_save" android:text="@string/editor_save"></Button>
        <Button android:layout_weight="1" android:layout_width="wrap_content" android:id="@+id/button_exit" android:layout_height="wrap_content" android:text="@string/editor_exit"></Button>
    </LinearLayout>
    
</LinearLayout>
